# PAYMENT CONFIGURATION
# ========================================
VITE_PAYMENT_PROVIDER=payme
VITE_PAYME_MERCHANT_ID=your_payme_merchant_id
VITE_PAYME_SECRET_KEY=your_payme_secret_key
VITE_CLICK_MERCHANT_ID=your_click_merchant_id
VITE_CLICK_SECRET_KEY=your_click_secret_key

# ========================================
# EMAIL CONFIGURATION
# ========================================
VITE_EMAIL_SERVICE=gmail
VITE_EMAIL_USER=noreply@zamon-books.com
VITE_EMAIL_PASS=your_email_app_password
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587

# ========================================
# SECURITY CONFIGURATION
# ========================================
VITE_JWT_SECRET=your_super_secure_jwt_secret_key_here
VITE_ENCRYPTION_KEY=your_32_character_encryption_key
VITE_API_RATE_LIMIT=100
VITE_CORS_ORIGIN=https://zamon-books.netlify.app

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================
VITE_CDN_URL=https://cdn.zamon-books.com
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOADING=true
VITE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600

# ========================================
# FEATURE FLAGS
# ========================================
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_RECOMMENDATIONS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true

# ========================================
# DEVELOPMENT & DEBUGGING
# ========================================
NODE_ENV=production
VITE_DEV_MODE=false
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_CONSOLE_LOGS=false

# ========================================
# NETLIFY SPECIFIC
# ========================================
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_auth_token
NETLIFY_DEPLOY_HOOK=your_deploy_hook_url

# ========================================
# THIRD PARTY INTEGRATIONS
# ========================================
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
VITE_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
VITE_YANDEX_METRICA_ID=your_yandex_metrica_id

# ========================================
# BACKUP & RECOVERY
# ========================================
VITE_BACKUP_ENABLED=true
VITE_BACKUP_FREQUENCY=daily
VITE_BACKUP_RETENTION_DAYS=30

# ========================================
# LOCALIZATION
# ========================================
VITE_DEFAULT_LANGUAGE=uz
VITE_SUPPORTED_LANGUAGES=uz,ru,en
VITE_CURRENCY=UZS
VITE_TIMEZONE=Asia/Tashkent